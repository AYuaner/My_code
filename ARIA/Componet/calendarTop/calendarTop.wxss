.contentBox{
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}

.scroll-view {
  height: 120rpx;
  background-color: #00509F;
  width: 98%;
  white-space: nowrap;
  border-radius: 4rpx;
}
.item {
  height: 120rpx;
  display: inline-block;
}
.text-view {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
  color: #fff;
}
/* .month {
  font-size: 30rpx;
  margin-top: 10rpx;
} */
.week {
  font-size: 26rpx;
  margin-top: 10rpx;
}
.day {
  font-size: 26rpx;
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
/* 日期选中的样式 */
.day-active {
  background-color: #59A5EE;
  border-top: #fff 4rpx solid;
  border-top-right-radius: 4rpx;
  border-top-left-radius: 4rpx;
  color: #fff;
}