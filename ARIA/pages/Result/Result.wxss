/* pages/Result/Result.wxss */
page{
  height: 100%;
}
.ContentBox{
  display: flex;
  justify-content: center;
  flex-wrap: wrap; 
  width: 100%;
  background-color:rgba(7,98,193) ;
  height: 100%;
}

.TopBox{
  width: 100%;
  display: flex;
  background: linear-gradient(rgb(0, 174, 255), rgba(7,98,193));
}
.TopPlane{
  width: 100%;
  background-color: #fff;
  border: solid #fff;
  border-radius: 20rpx;
  margin: 10rpx;
}

.scroll-view {
  height: 120rpx;
  background-color: #00509F;
  width: 98%;
  white-space: nowrap;
  border-radius: 4rpx;
}
.item {
  height: 120rpx;
  display: inline-block;
}
.text-view {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
  color: #fff;
}
/* .month {
  font-size: 30rpx;
  margin-top: 10rpx;
} */
.week {
  font-size: 26rpx;
  margin-top: 10rpx;
}
.day {
  font-size: 26rpx;
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
/* 日期选中的样式 */
.day-active {
  background-color: #59A5EE;
  border-top: #fff 4rpx solid;
  border-top-right-radius: 4rpx;
  border-top-left-radius: 4rpx;
  color: #fff;
}

.MovableBox{
  width: 98%;
  background-color: rgba(7,98,193);
  height: 1100rpx;
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}

.movable-area{
  width: 100%;
  height: 14vh;
  background-color: #fff;
  border: rgba(7,98,193) solid 10rpx;
  border-radius: 20rpx;
}
.movable-view{
  width: 100%;
  height: 100%;
}
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;

  width: 100%;
  height: 100%;
  overflow: hidden
}
.content {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}
.del {
  background-color: #00509F;
  font-size: 26rpx;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}


