/* pages/Favorites/Favorites.wxss */
.userInfoWrap{
  height: 45vh;
  position: relative;
  background-color: var(--themeColor);
  overflow: hidden;
}
.userImgWrap{
  position: relative;
}
.userBg{
  height: 50vh;
  width: 100%;
  /* 背景高斯模糊 */
  filter: blur(10rpx);
}

.userinfo{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}

.userIcon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.userName{
  color: rgb(0, 0, 0);
  margin-top: 40rpx;
  font-size: 40rpx;
}

.userButton{
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  top:40%;
  border: 1rpx solid rgb(254, 149, 18);
  color: white;
  font-size: 38rpx;
  padding: 20rpx;
  border-radius: 50rpx;
  background-color: rgb(254, 149, 18);
  width: 40%;
  text-align: center;
}