/**index.wxss**/
page{
  background-color: rgb(248,248,248);
}

.ContentBox{
  display: flex;
  align-items: center;
  flex-direction: column;
}

.TopBox{
  width: 100%;
  display: flex;
  background: linear-gradient(rgb(0, 174, 255), rgba(7,98,193));
}

.TopPlane{
  width: 100%;
  background-color: #fff;
  border: solid #fff;
  border-radius: 20rpx;
  margin: 10rpx;
}

.TopBox{
  display: flex;
  height: 400rpx;
  position: relative;
}

.floatBox{
  border-radius: 14rpx;
  width: 90%;
  border: solid #fff;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  background-color: #fff;
  box-shadow: 0rpx 10rpx 20rpx 10rpx #888888;
  position: absolute;
  top: 20%;

}

.SelectBox{
  display: flex;
  width: 80%;
  justify-content: flex-start;
  font-size: 40rpx;
  padding: 20rpx;
}

.citySelect{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  font-size: 56rpx;
  font-weight: bold;
}

.iconPlane{
  margin-left: 90rpx;
}

.iconPlane{
  font-size: 82rpx;
}

.SearchBox{
  width: 80%;
  border-radius: 18rpx;
  margin: 30rpx 30rpx 30rpx 30rpx;
  background-color: #59A5EE;
  color:white;
  line-height: 80rpx;
}

.SearchBox navigator{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.SearchBox navigator text{
  font-size: 40rpx;
}

.DateBox{
  width: 80%;
  border-bottom:#E6E6E6 1px solid;
  margin:20rpx;
  padding:20rpx;
  justify-content: flex-start;
  font-size: 40rpx;
}